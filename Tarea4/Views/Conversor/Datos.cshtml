@model Tarea4.Models.Conversor
@using Tarea4.Models

@{
    ViewBag.Title = "Datos";
}

<h2>Datos</h2>


@using (Html.BeginForm("Conversiones", "Conversor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.TextBoxFor(a => a.Valor1, new { @class = "form-control", placeholder = "Valor 1" })
    @Html.EnumDropDownListFor(model => model.Datos, htmlAttributes: new { @class = "form-control" })
    @Html.EnumDropDownListFor(model => model.Datos2, htmlAttributes: new { @class = "form-control" })
    <br />

    <input type="submit" value="ACEPTAR" />
}