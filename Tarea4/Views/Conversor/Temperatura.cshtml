@model Tarea4.Models.Conversor
@using Tarea4.Models
@{
    ViewBag.Title = "Temperatura";
}

<h2>Temperatura</h2>

@using (Html.BeginForm("Conversiones", "Conversor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.TextBoxFor(a => a.Valor1, new { @class = "form-control", placeholder = "Valor 1" })
    @Html.EnumDropDownListFor(model => model.Temperatura, htmlAttributes: new { @class = "form-control" })
    @Html.EnumDropDownListFor(model => model.Temperatura2, htmlAttributes: new { @class = "form-control" })
    <br />

    <input type="submit" value="ACEPTAR" />
}


