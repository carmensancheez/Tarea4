@model Tarea4.Models.Conversor
@using Tarea4.Models
@{
    ViewBag.Title = "Longitud";
}

<h2>Longitud</h2>

@using (Html.BeginForm("Conversiones", "Conversor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.TextBoxFor(a => a.Valor1, new { @class = "form-control", placeholder = "Valor 1" })
    @Html.EnumDropDownListFor(model => model.Longitud, htmlAttributes: new { @class = "form-control" })
    @Html.EnumDropDownListFor(model => model.Longitud2, htmlAttributes: new { @class = "form-control" })
    <br />
    <input type="submit" value="ACEPTAR"/>
}